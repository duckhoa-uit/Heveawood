{{ 'section-image-tabs.css' | asset_url | stylesheet_tag }}
<script src="{{ 'image-tabs.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-margin' %}
  {% render 'section-padding' %}
{% endstyle %}

<div class="image-tabs section-{{ section.id }}-padding{% if section.settings.show_border_top %} image-tabs--border-top{% endif %}{% if section.settings.show_border_bottom %} image-tabs--border-bottom{% endif %}">
  <div class="container">
    <div class="image-tabs__wrapper">
      <div class="image-tabs__content">
        <div class="image-tabs__content-static">
          {% if section.settings.subheading != blank %}
            <div class="image-tabs__subheading subheading">
              {{ section.settings.subheading }}
            </div>
          {% endif %}
          {% if section.settings.heading != blank %}
            <h2 class="image-tabs__heading {{ section.settings.heading_size }}">
              {{ section.settings.heading | escape }}
            </h2>
          {% endif %}
        </div>

        <div class="image-tabs__media image-tabs__media--mobile swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div
                class="image-tabs__image swiper-slide"
                data-id="{{ block.id }}"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.image != blank -%}
                  {%- capture sizes -%}
                    calc(100vw - 40px)
                  {%- endcapture -%}
                  {%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600, 1800, 1980' -%}
                  {{
                    block.settings.image
                    | image_url: width: block.settings.image.width
                    | image_tag: loading: 'lazy', sizes: sizes, widths: widths
                  }}
                {%- else -%}
                  {% assign collection_index = forloop.index | modulo: 3 | plus: 1 %}
                  {{ 'hero-apparel-' | append: collection_index | placeholder_svg_tag }}
                {%- endif -%}
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="image-tabs__content-blocks {% if section.blocks.size > 1 %}swiper swiper--image-tabs{% endif %}">
          <div class="image-tabs__content-blocks-wrapper {% if section.blocks.size > 1 %}swiper-wrapper{% endif %}">
            {% for block in section.blocks %}
              <div
                class="image-tabs__block {% if forloop.index == 1 %} image-tabs__block--active{% endif %}"
                data-image-tabs="#image-tabs-{{ forloop.index }}"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.icon != blank %}
                  {% render 'icon-pack', icon: block.settings.icon %}
                {% endif %}
                {% if block.settings.heading != blank or block.settings.text != blank %}
                  <div class="image-tabs__block-info">
                    {% if block.settings.heading != blank %}
                      <h4 class="image-tabs__block-heading h4">
                        {{ block.settings.heading | escape }}
                      </h4>
                    {% endif %}
                    {%- if block.settings.text != blank -%}
                      <div class="image-tabs__block-text">
                        {{ block.settings.text | strip_html | truncate: 150 }}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                {%- if block.settings.button_label != blank -%}
                  {% liquid
                    assign btn_size = 'primary'
                    if section.settings.button_style == 'primary' or section.settings.button_style == 'secondary'
                      assign btn_size = 'small'
                    endif
                  %}
                  {% render 'button',
                    btn_label: block.settings.button_label,
                    btn_link: block.settings.button_link,
                    btn_size: btn_size,
                    btn_style: section.settings.button_style,
                    add_classes: 'image-tabs__block-button focus-inset'
                  %}
                {% endif %}
              </div>
            {% endfor %}
          </div>
          {%- if section.blocks.size > 1 -%}
            <div class="swipe-on-mobile__nav no-js-hidden">
              <div class="image-tabs__pagination swiper-pagination"></div>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="image-tabs__media image-tabs__media--desktop">
        {% for block in section.blocks %}
          {% style %}
            #shopify-section-{{ section.id }} .image-tabs__media--desktop [data-id="{{ block.id }}"].image-tabs__image img {
              {% if section.settings.image_fit == 'contain' and block.settings.image != blank %}
                object-fit: contain;
                object-position: top;
              {% else %}
                object-fit: cover;
                object-position: center;
              {% endif %}
            }
          {% endstyle %}
          <div
            class="image-tabs__image{% if forloop.index == 1 %} image-tabs__image--active active{% endif %}"
            data-image-tabs="#image-tabs-{{ forloop.index }}"
            data-id="{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.image != blank -%}
              {%- capture sizes -%}
                calc(100vw - 128px)
              {%- endcapture -%}
              {%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600' -%}
              {{
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag: loading: 'lazy', sizes: sizes, widths: widths
              }}
            {%- else -%}
              {% assign collection_index = forloop.index | modulo: 3 | plus: 1 %}
              {{ 'hero-apparel-' |  append: collection_index | placeholder_svg_tag }}
            {%- endif -%}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

