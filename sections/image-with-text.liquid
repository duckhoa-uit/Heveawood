{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-margin' %}
{%- endstyle -%}

{% liquid
  assign color_scheme = section.settings.color_scheme
  assign layout = section.settings.layout
  assign image_size = section.settings.image_size
  assign content_alignment = section.settings.content_alignment
  assign button_style = section.settings.button_style
%}

<div class="image-with-text">
  <div class="container">
    <div class="image-with-text__wrapper color-{{ color_scheme }}">
      <div class="image-with-text__grid image-with-text__grid--{{ layout }}">
        {% if image_size != 'adapt' and image_size != 'large' %}
          {% style %}
            #shopify-section-{{ section.id }} .image-with-text__media {
              aspect-ratio: {{ image_size }};
            }
          {% endstyle %}
        {% endif %}
        <div class="image-with-text__media {{ image_size }}">
          {%- if section.settings.image != blank -%}
            {%- if layout == 'image_top' or layout == 'image_bottom' -%}
              {%- assign widths = '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000, 2400, 2800, 3200'-%}
              {%- capture sizes -%}
                (min-width: 1200px) calc((100vw - 126px)), calc((100vw - 40px))
              {%- endcapture -%}
            {%- else -%}
              {%- capture sizes -%}
                (min-width: 1200px) calc((50vw - 64px)), calc((100vw - 40px))
              {%- endcapture -%}
              {%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600' -%}
            {%- endif -%}
            {{
              section.settings.image
              | image_url: width: section.settings.image.width
              | image_tag:
                loading: 'lazy',
                sizes: sizes,
                widths: widths
            }}
          {%- else -%}
            {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        <div class="image-with-text__content image-with-text__content--{{ content_alignment }} image-with-text__content--{{ layout }}">
          {%- if section.settings.subheading != blank -%}
            <div class="image-with-text__subheading subheading">
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <h2 class="image-with-text__heading {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {% if section.settings.text != blank %}
            <div class="image-with-text__text richtext__content">
              {{ section.settings.text }}
            </div>
          {% endif %}
          {% if section.settings.author_name != blank %}
            <div class="image-with-text__author">
              <div class="image-with-text__author-photo">
                {%- if section.settings.author_photo != blank -%}
                  {{
                    section.settings.author_photo
                    | image_url: width: 116
                    | image_tag:
                      loading: 'lazy',
                      sizes: '116px',
                      widths: '58, 116'
                  }}
                {%- else -%}
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="image-with-text__author-info">
                <h4 class="image-with-text__author-name h4">
                  {{ section.settings.author_name }}
                </h4>
                {% if section.settings.author_position != blank %}
                <p class="image-with-text__author-position">
                  {{ section.settings.author_position }}
                </p>
                {% endif %}
              </div>
            </div>
          {% endif %}
          {% if section.settings.button_label != blank %}
            {% render 'button',
              btn_label: section.settings.button_label,
              btn_link: section.settings.button_link,
              btn_size: 'small',
              btn_style: button_style,
              add_classes: 'image-with-text__button focus-inset'
            %}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

