{{ 'section-content-tabs.css' | asset_url | stylesheet_tag }}
<script src="{{ 'content-tabs.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  {% render 'section-padding' %}
  {% render 'section-margin' %}
{%- endstyle -%}

<div class="content-tabs section-{{ section.id }}-padding{% if section.settings.show_border_top %} content-tabs--border-top{% endif %}{% if section.settings.show_border_bottom %} content-tabs--border-bottom{% endif %}">
  <div class="container content-tabs__container">
    {% render 'section-header',
      section_heading: section.settings.section_heading,
      button_label: section.settings.section_button_label,
      button_link: section.settings.section_button_link,
      button_style: section.settings.section_button_style
    %}

    {%- if section.blocks.size > 0 -%}
      <div class="content-tabs__wrapper">
        <div class="content-tabs__tabs">
          <div class="content-tabs__tabs-wrapper content-tabs__tabs-wrapper--{{ section.blocks.size }} content-tabs__tabs-wrapper--{{ section.settings.tabs_width_mode }}">
            {%- for block in section.blocks -%}
              <style>
                @media screen and (hover: hover) and (pointer: fine) {
                  .content-tabs__wrapper:has([data-content-tab-id="#content-tab-{{ block.id }}"].content-tabs__tab--opacity) .content-tabs__content[data-content-tab-id="#content-tab-{{ block.id }}"] {
                    opacity: 0.5;
                  }
                }
              </style>
              <div
                class="content-tabs__tab{% if forloop.index == 1 %} content-tabs__tab--active{% endif %} focus-inset"
                data-content-tab-id="#content-tab-{{ block.id }}"
                tabindex="0"
                {{ block.shopify_attributes }}
              >
                <h6 class="content-tabs__tab-heading">{{- block.settings.tab_heading -}}</h6>
              </div>
            {%- endfor -%}
          </div>
        </div>

        {%- for block in section.blocks -%}
          <div
            class="content-tabs__content content-tabs__content--align-{{block.settings.tab_align}} {% if forloop.index == 1 %} content-tabs__content--active animate{% endif %}"
            data-content-tab-id="#content-tab-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.tab_text != blank -%}
              <div class="content-tabs__content-richtext richtext__content">
                {{- block.settings.tab_text -}}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

