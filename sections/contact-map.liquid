{{ 'section-contact-map.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-margin' %}
{%- endstyle -%}

<div class="contact-map">
  <div class="container">
    <div class="contact-map__inner">
      <div class="contact-map__grid">
        <!-- Contact Form Column -->
        <div class="contact-map__form-wrapper">
          {%- if section.settings.heading != blank -%}
            <h2 class="contact-map__title {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <p class="contact-map__text">
              {{ section.settings.text }}
            </p>
          {%- endif -%}
          {%- form 'contact', id: 'ContactMapForm' -%}
            {%- if form.posted_successfully? -%}
              <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
                {% render 'icon-success' %}
                {{ 'templates.contact.form.post_success' | t }}
              </div>
            {%- elsif form.errors -%}
              <div class="form__message form__message--error" tabindex="-1" autofocus>
                {% render 'icon-error' %}
                {{ 'templates.contact.form.error_heading' | t }}
              </div>
            {%- endif -%}

            <div class="field field__name">
              <input
                class="field__input focus-inset"
                autocomplete="name"
                type="text"
                id="ContactMapForm-name"
                name="contact[{{ 'templates.contact.form.name' | t }}]"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                placeholder="{{ 'templates.contact.form.name' | t }}"
              >
              <label
                class="field__label"
                for="ContactMapForm-name"
                placeholder="{{ 'templates.contact.form.name' | t }}"
              >
                {{ 'templates.contact.form.name' | t }}
              </label>
            </div>

            <div class="field field--with-error">
              <input
                autocomplete="email"
                type="email"
                id="ContactMapForm-email"
                class="field__input focus-inset"
                name="contact[email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="ContactMapForm-email-error"
                {% endif %}
                placeholder="{{ 'templates.contact.form.email' | t }}"
                required
              >
              <label
                class="field__label"
                for="ContactMapForm-email"
                placeholder="{{ 'templates.contact.form.email' | t }}"
              >
                {{ 'templates.contact.form.email' | t }}
              </label>
              {%- if form.errors contains 'email' -%}
                <small class="contact-map__field-error" id="ContactMapForm-email-error">
                  <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                  <span class="form__message">
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </span>
                </small>
              {%- endif -%}
            </div>

            <div class="field">
              <input
                type="tel"
                id="ContactMapForm-phone"
                class="field__input"
                autocomplete="tel"
                name="contact[{{ 'templates.contact.form.phone' | t }}]"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                placeholder="{{ 'templates.contact.form.phone' | t }}"
              >
              <label
                class="field__label"
                for="ContactMapForm-phone"
                placeholder="{{ 'templates.contact.form.phone' | t }}"
              >
                {{- 'templates.contact.form.phone' | t -}}
              </label>
            </div>

            <div class="field">
              <textarea
                id="ContactMapForm-body"
                class="text-area field__input"
                name="contact[{{ 'templates.contact.form.comment' | t }}]"
                placeholder="{{ 'templates.contact.form.comment' | t }}"
                aria-required="true"
                required
              >
                {{- form.body -}}
              </textarea>
              <label
                class="form__label field__label"
                for="ContactMapForm-body"
                placeholder="{{ 'templates.contact.form.comment' | t }}"
              >
                {{- 'templates.contact.form.comment' | t -}}
              </label>
            </div>

            <div class="contact-map__form-bottom">
              <button
                type="submit"
                class="button button--{{ section.settings.button_style }} button--primary-size focus-inset"
                data-button-text="{{ 'templates.contact.form.send' | t }}"
              >
                <span>{{ 'templates.contact.form.send' | t }}</span>
              </button>

              {% if section.settings.additional_text != blank %}
                <div class="contact-map__add-text text-sm">
                  {{ section.settings.additional_text }}
                </div>
              {% endif %}
            </div>
          {%- endform -%}
        </div>

        <!-- Map Column -->
        <div class="contact-map__map-wrapper">
          {%- if section.settings.map_api_key != blank and section.settings.map_address != blank -%}
            <div class="contact-map__map" id="contact-map-{{ section.id }}">
              <iframe
                src="https://www.google.com/maps/embed/v1/place?key={{ section.settings.map_api_key }}&q={{ section.settings.map_address | url_encode }}&zoom={{ section.settings.map_zoom | default: 15 }}"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                aria-label="{{ 'sections.contact_map.map_aria_label' | t: address: section.settings.map_address }}"
              ></iframe>
            </div>
          {%- else -%}
            <div class="contact-map__map-placeholder">
              <div class="contact-map__map-placeholder-content">
                {% render 'icon-location' %}
                <h3>{{ 'sections.contact_map.map_placeholder_title' | t }}</h3>
                <p>{{ 'sections.contact_map.map_placeholder_text' | t }}</p>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact_map.name",
  "tag": "section",
  "class": "spaced-section contact-map-section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.content_options.header.content"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "t:sections.contact_map.settings.heading.default",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "display-md display-md--medium",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "display-sm display-sm--medium",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "display-xs display-xs--medium",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "display-sm display-sm--medium",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "text",
      "id": "text",
      "default": "t:sections.contact_map.settings.text.default",
      "label": "t:sections.all.text.label"
    },
    {
      "type": "inline_richtext",
      "id": "additional_text",
      "default": "t:sections.contact_map.settings.additional_text.default",
      "label": "t:sections.contact_map.settings.additional_text.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.button.header_button.content"
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.all.button.button_style.options__1.label"
        },
        {
          "value": "secondary",
          "label": "t:sections.all.button.button_style.options__2.label"
        },
        {
          "value": "tertiary",
          "label": "t:sections.all.button.button_style.options__3.label"
        }
      ],
      "default": "primary",
      "label": "t:sections.all.button.button_style.label"
    },
    {
      "type": "header",
      "content": "t:sections.contact_map.settings.map_header.content"
    },
    {
      "type": "text",
      "id": "map_api_key",
      "label": "t:sections.contact_map.settings.map_api_key.label",
      "info": "t:sections.contact_map.settings.map_api_key.info"
    },
    {
      "type": "text",
      "id": "map_address",
      "label": "t:sections.contact_map.settings.map_address.label",
      "info": "t:sections.contact_map.settings.map_address.info"
    },
    {
      "type": "range",
      "id": "map_zoom",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 15,
      "label": "t:sections.contact_map.settings.map_zoom.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.section-margin.header.content"
    },
    {
      "type": "select",
      "id": "margin_top",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "m",
      "label": "t:sections.all.section-margin.margin_top.label"
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "m",
      "label": "t:sections.all.section-margin.margin_bottom.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact_map.presets.name"
    }
  ]
}
{% endschema %}
