<link rel="stylesheet" href="{{ 'component-badge.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'section-product-recommendations.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

<noscript>{{ 'component-badge.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>
  {{- 'section-product-recommendations.css' | asset_url | stylesheet_tag -}}
</noscript>

{%- if settings.quickview_show or settings.show_on_mobile -%}
  {% comment %}theme-check-disable AssetPreload{% endcomment %}
  <link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="all">
  <link
    rel="preload"
    href="{{ 'quick-add.css' | asset_url }}"
    as="style"
    onload="this.onload=null;this.rel='stylesheet'"
  >
  {% comment %}theme-check-enable AssetPreload{% endcomment %}
{%- endif -%}

{%- style -%}
  {% render 'section-margin' %}
{%- endstyle -%}

{% liquid
  assign swipe_on_mobile = section.settings.swipe_on_mobile
%}

<product-recommendations
  class="product-recommendations"
  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}"
>
  <div class="container">
    {% render 'section-header',
      section_heading: section.settings.section_heading,
      button_label: section.settings.section_button_label,
      button_link: section.settings.section_button_link,
      button_style: section.settings.section_button_style
    %}

    {% if recommendations.performed and recommendations.products_count > 0 %}
      <div
        class="product-recommendations__content{% if swipe_on_mobile %} swiper swiper--recomend-products{% endif %}"
        data-columns-mobile="{{section.settings.columns_mobile}}"
      >
        <ul class="product-recommendations__wrapper product-recommendations__wrapper--{{ section.settings.columns_per_row }} product-recommendations__wrapper--{{ section.settings.columns_mobile }}-mobile list-unstyled{% if swipe_on_mobile %} swiper-wrapper{% endif %}">
          {% for recommendation in recommendations.products limit: section.settings.products_limit %}
            <li class="product-recommendations__item collection-product-card quickview{%- if settings.quickview_hover -%}--hover{% endif %} {% if swipe_on_mobile %}swiper-slide{% endif %}">
              {% render 'product-card',
                product_card_product: recommendation,
                media_size: section.settings.image_ratio,
                media_fit: section.settings.image_fit,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_collection: section.settings.show_collection,
                show_desc: section.settings.show_desc,
                section_id: section.id,
                add_id: forloop.index,
                content_alignment: section.settings.content_alignment
              %}
            </li>
          {%- endfor -%}
        </ul>

        {%- if swipe_on_mobile -%}
          <div class="swipe-on-mobile__nav no-js-hidden">
            <div class="product-recommendations__pagination swiper-pagination"></div>
          </div>
        {%- endif -%}
      </div>
    {% else %}
      <div
        class="product-recommendations__empty"
        style="display: none;"
      >
        <span>
          {{ 'sections.product_recommendations.recommendations_empty' | t }}
        </span>
      </div>
    {% endif %}

    <div
      class="product-recommendations__loading"
      style="display: none;"
    >
      {% render 'icon-spinner' %}
    </div>
  </div>
</product-recommendations>

