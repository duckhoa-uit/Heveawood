{{ 'section-categories-list.css' | asset_url | stylesheet_tag }}
<script src="{{ 'categories-list.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  {% render 'section-margin' %}

  :root {
    --indent_value: {{ section.settings.indent_value }};
  }
{%- endstyle -%}

{% liquid
  assign layout = section.settings.layout
  assign indent_value = section.settings.indent_value
  assign column_per_row = section.settings.columns_per_row
  assign image_ratio = section.settings.image_ratio
  assign object_fit = section.settings.object_fit
  assign swipe_on_mobile = section.settings.swipe_on_mobile
  assign columns_mobile = section.settings.columns_mobile
%}

<div class="categories-list">
  <div class="container">
    {% render 'section-header',
      section_heading: section.settings.section_heading,
      button_label: section.settings.section_button_label,
      button_link: section.settings.section_button_link,
      button_style: section.settings.section_button_style 
    %}

    <div
      class="categories-list__content {% if swipe_on_mobile and section.blocks.size > 1 %}swiper swiper--collections{% endif %}"
      data-columns-mobile="{{columns_mobile}}"
    >
      <div class="categories-list__wrapper categories-list__wrapper--{{ layout }} categories-list__wrapper--{{ column_per_row }} categories-list__wrapper--{{columns_mobile}}-mobile categories-list__wrapper--{{ indent_value }}{% if swipe_on_mobile and section.blocks.size > 1 %} swiper-wrapper{% endif %}">
        {%- for block in section.blocks -%}
          {% liquid
            if block.settings.image != blank
              assign collection_image = block.settings.image
            else
              assign collection_image = block.settings.collection.featured_image
            endif
          %}

          {% style %}
            #shopify-section-{{ section.id }} [data-id="{{ block.id }}"].categories-list__item {
                --opacity-overlay: {{ block.settings.overlay_opacity }};
                {% if image_ratio != 'large' %}
                  --aspect-ratio: {{ image_ratio }};
                {% endif %}
              }
          {% endstyle %}

          <div
            class="categories-list__item {% if indent_value == "0" %}without-border-radius{% endif %} {% if swipe_on_mobile and section.blocks.size > 1 %}swiper-slide{% endif %}"
            {{ block.shopify_attributes }}
            data-id="{{ block.id }}"
          >
            <div class="categories-list__item-inner color-{{ block.settings.color_scheme }} {{ image_ratio }}">
              <div class="categories-list__image">
                {% if collection_image != blank %}
                  {% case column_per_row %}
                    {% when 8 %}
                      {% capture sizes %}
                      (min-width: 1600px) calc((100vw - 128px) / 8), (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 7 %}
                      {% capture sizes %}
                      (min-width: 1600px) calc((100vw - 128px) / 7), (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 6 %}
                      {% capture sizes %}
                      (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 5 %}
                      {% capture sizes %}
                      (min-width: 1360px) calc((100vw - 128px) / 5), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 4 %}
                      {% capture sizes %}
                        (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 3 %}
                      {% capture sizes %}
                        (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% when 2 %}
                      {% capture sizes %}
                        (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                      {% endcapture %}
                    {% else %}
                      {% capture sizes %}
                        calc(100vw - 40px)
                      {% endcapture %}
                  {% endcase %}
                  {%- capture style -%}
                      object-fit: {{ object_fit }};
                    {%- endcapture -%}
                  {{
                    collection_image
                    | image_url: width: collection_image.width
                    | image_tag:
                      loading: 'lazy',
                      sizes: sizes,
                      widths: '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000, 2400, 2800, 3200',
                      style: style
                  }}
                {% else %}
                  {% assign collection_index = forloop.index | modulo: 4 | plus: 1 %} 
                  {{ 'collection-apparel-' | append: collection_index | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% if layout == 'overlay' and block.settings.overlay_enable %}
                  <span class="categories-list__overlay"></span>
                {% endif %}
              </div>
              {% if layout == 'overlay' %}
                <h4 class="categories-list__item-title--inner h4">
                  {% if block.settings.collection != blank %}
                    <a
                      href="{{ block.settings.collection.url }}"
                      class="categories-list__link"
                      aria-label="{{ block.settings.collection.title }}"
                    >
                      <div>
                        <span>{{ block.settings.collection.title }}</span>
                      </div>
                    </a>
                  {% else %}
                    <div>
                      <span>{{- 'general.card.collection_name' | t -}}</span>
                    </div>
                  {% endif %}
                </h4>
              {% endif %}
              {% if layout == 'standard' %}
                <div class="button categories-list__button-wrapper">
                  <a
                    {% if block.settings.collection != blank %}
                      href="{{ block.settings.collection.url }}"
                      data-button-text="{{ 'general.card.shop__now' | t }}"
                      aria-label="{{ 'general.card.shop__now' | t }}"
                    {% endif %}
                    class="button categories-list__button button--primary button--primary-size focus-inset"
                    {% if block.settings.collection == blank %}
                      aria-disabled="true"
                    {% endif %}
                  >
                    <span>
                      {{ 'general.card.shop__now' | t }}
                    </span>
                  </a>
                </div>
              {%- endif -%}
            </div>
            {% if layout == 'standard' %}
              <h4 class="categories-list__item-title--standard h4">
                {% if block.settings.collection != blank %}
                  <a
                    href="{{ block.settings.collection.url }}"
                    class="categories-list__link"
                    aria-label="{{ block.settings.collection.title }}"
                  >
                    <span>
                      {{ block.settings.collection.title }}
                    </span>
                  </a>
                {% else %}
                  <span>
                    {{- 'general.card.collection_name' | t -}}
                  </span>
                {% endif %}
              </h4>
              {% if block.settings.collection != blank %}
                <a
                  href="{{ block.settings.collection.url }}"
                  class="categories-list__overlay-link"
                  aria-label="{{ block.settings.collection.title }}"
                ></a>
              {% endif %}
            {% endif %}
          </div>
        {%- endfor -%}
      </div>

      {%- if swipe_on_mobile and section.blocks.size > 1 -%}
        <div class="swipe-on-mobile__nav no-js-hidden">
          <div class="categories-list__pagination swiper-pagination"></div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

