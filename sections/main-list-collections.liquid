<link rel="stylesheet" href="{{ 'section-categories-list.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'categories-list.js' | asset_url }}" defer="defer"></script>
<noscript>
  {{- 'section-categories-list.css' | asset_url | stylesheet_tag -}}
</noscript>
{%- if settings.pagination_type == 'load_more' or settings.pagination_type == 'infinite_scroll' -%}
  <script src="{{ 'load-more.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  {% render 'section-margin' %}

  :root {
    --indent_value: {{ section.settings.indent_value }};
  }
{%- endstyle -%}

<div class="container">
  <div class="page-header">
    <div class="page-header__inner">
      <h1 class="main-page-title page-title title--page h3">
        {{ section.settings.title | escape }}
      </h1>
    </div>
  </div>

  {%- liquid
    assign layout = section.settings.layout
    assign indent_value = section.settings.indent_value
    assign column_per_row = section.settings.columns_per_row
    assign image_ratio = section.settings.image_ratio
    assign object_fit = section.settings.object_fit
    assign swipe_on_mobile = section.settings.swipe_on_mobile
    assign columns_mobile = section.settings.columns_mobile
    assign paginate_by = section.settings.collections_to_show

    case section.settings.sort
      when 'products_high', 'products_low'
        assign collections = collections | sort: 'all_products_count'
      when 'date', 'date_reversed'
        assign collections = collections | sort: 'published_at'
    endcase

    if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
      assign collections = collections | reverse
    endif
  -%}

  {%- paginate collections by paginate_by -%}
    {% if paginate.current_page == 1 %}
      {% assign items_first = 1 %}
    {% else %}
      {% assign items_first = paginate.current_page | times: paginate_by | minus: paginate_by | plus: 1 %}
    {% endif %}
    {% assign items_last = paginate.current_page | times: paginate_by %}

    <div class="categories-list">
      <div
        class="categories-list__content {% if swipe_on_mobile and collections.size > 1 %}swiper swiper--collections{% endif %}"
        data-columns-mobile="{{columns_mobile}}"
      >
        <div class="categories-list__wrapper categories-list__wrapper--{{ layout }} categories-list__wrapper--{{ column_per_row }} categories-list__wrapper--{{columns_mobile}}-mobile{% if swipe_on_mobile and collections.size > 1 %} swiper-wrapper{% endif %}">
          {% style %}
            #shopify-section-{{ section.id }} .categories-list__item {
              --opacity-overlay: {{ section.settings.overlay_opacity }};
              --aspect-ratio: {{ image_ratio }};
            }
          {% endstyle %}
          {%- for collection in collections -%}
            {% if forloop.index >= items_first and forloop.index <= items_last %}
              {% liquid
                assign collection_image = collection.featured_image
              %}
              <div
                class="categories-list__item {% if indent_value == "0" %}without-border-radius{% endif %} {% if swipe_on_mobile and collections.size > 1 %}swiper-slide{% endif %}"
                {{ block.shopify_attributes }}
              >
                <div class="categories-list__item-inner color-{{ section.settings.color_scheme }} {{ image_ratio }}">
                  <div class="categories-list__image">
                    {% if collection_image != blank %}
                      {% case column_per_row %}
                        {% when 8 %}
                          {% capture sizes %}
                          (min-width: 1600px) calc((100vw - 128px) / 8), (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 7 %}
                          {% capture sizes %}
                          (min-width: 1600px) calc((100vw - 128px) / 7), (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 6 %}
                          {% capture sizes %}
                          (min-width: 1360px) calc((100vw - 128px) / 6), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 5 %}
                          {% capture sizes %}
                          (min-width: 1360px) calc((100vw - 128px) / 5), (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 4 %}
                          {% capture sizes %}
                            (min-width: 1200px) calc((100vw - 128px) / 4), (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 3 %}
                          {% capture sizes %}
                            (min-width: 990px) calc((100vw - 40px) / 3), (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% when 2 %}
                          {% capture sizes %}
                            (min-width: 750px) calc((100vw - 40px) / 2), calc(100vw - 40px)
                          {% endcapture %}
                        {% else %}
                          {% capture sizes %}
                            calc(100vw - 40px)
                          {% endcapture %}
                      {% endcase %}
                      {%- capture style -%}
                        object-fit: {{ object_fit }};
                      {%- endcapture -%}
                      {{
                        collection_image
                        | image_url: width: collection_image.width
                        | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000, 2400, 2800, 3200',
                          style: style
                      }}
                    {% else %}
                      {% assign placeholder_index = forloop.index | modulo: 3 | plus: 1 %}

                      {{
                        'collection-apparel-' | append: placeholder_index
                        | placeholder_svg_tag: 'placeholder-svg'
                      }}
                    {% endif %}
                    {% if layout == 'overlay' and section.settings.overlay_enable %}
                      <span class="categories-list__overlay"></span>
                    {% endif %}
                  </div>
                  {% if layout == 'overlay' %}
                    <h4 class="categories-list__item-title--inner h4">
                      <a
                        href="{{ collection.url }}"
                        class="categories-list__link"
                      >
                        <div>
                          <span>{{ collection.title }}</span>
                        </div>
                      </a>
                    </h4>
                  {% endif %}
                  {% if layout == 'standard' %}
                    <div class="button categories-list__button-wrapper">
                      <a
                        href="{{ collection.url }}"
                        data-button-text="{{ 'general.card.shop__now' | t }}"
                        class="button categories-list__button button--primary button--primary-size focus-inset"
                      >
                        <span>
                          {{ 'general.card.shop__now' | t }}
                        </span>
                      </a>
                    </div>
                  {%- endif -%}
                </div>
                {% if layout == 'standard' %}
                  <h4 class="categories-list__item-title--standard h4">
                    <a
                      href="{{ collection.url }}"
                      class="categories-list__link"
                    >
                      <span>
                        {{ collection.title }}
                      </span>
                    </a>
                  </h4>
                  <a
                    href="{{ collection.url }}"
                    class="categories-list__overlay-link"
                    aria-label="{{ collection.tittle }}"
                  ></a>
                {% endif %}
              </div>
            {% endif %}
          {%- endfor -%}
        </div>

        {%- if swipe_on_mobile and collections.size > 1 -%}
          <div class="swipe-on-mobile__nav no-js-hidden">
            <div class="categories-list__pagination swiper-pagination"></div>
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- if paginate.pages > 1 -%}
      {%- if settings.pagination_type == 'load_more' -%}
        {% render 'load-more',
          next_url: paginate.next.url,
          count_pages: paginate.pages,
          current_page: paginate.current_page
        %}
        <div class="js-hidden">
          {% render 'pagination', paginate: paginate %}
        </div>
      {%- elsif settings.pagination_type == 'infinite_scroll' -%}
        {% render 'infinite-scroll',
          next_url: paginate.next.url,
          count_pages: paginate.pages,
          current_page: paginate.current_page
        %}
        <div class="js-hidden">
          {% render 'pagination', paginate: paginate %}
        </div>
      {% else %}
        {% render 'pagination', paginate: paginate %}
      {%- endif -%}
    {%- endif -%}
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "t:sections.main-list-collections.name",
  "tag": "section",
  "class": "section-list-collections spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.main-list-collections.settings.title.label",
      "default": "Collections"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "background-3",
      "label": "t:sections.all.color_scheme.label",
      "info": "t:sections.all.overlay.overlay_opacity.info"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:sections.all.section_layout.label",
      "options": [
        {
          "value": "overlay",
          "label": "t:sections.all.section_layout.options.options__1.label"
        },
        {
          "value": "standard",
          "label": "t:sections.all.section_layout.options.options__2.label"
        }
      ],
      "default": "standard"
    },
    {
      "type": "range",
      "id": "collections_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 12,
      "label": "t:sections.main-list-collections.settings.collections_to_show.label"
    },
    {
      "type": "range",
      "id": "columns_per_row",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 6,
      "label": "t:sections.all.columns.label",
      "info": "t:sections.all.columns.info"
    },
    {
      "type": "select",
      "id": "sort",
      "options": [
        {
          "value": "alphabetical",
          "label": "t:sections.main-list-collections.settings.sort.options__1.label"
        },
        {
          "value": "alphabetical_reversed",
          "label": "t:sections.main-list-collections.settings.sort.options__2.label"
        },
        {
          "value": "date_reversed",
          "label": "t:sections.main-list-collections.settings.sort.options__3.label"
        },
        {
          "value": "date",
          "label": "t:sections.main-list-collections.settings.sort.options__4.label"
        },
        {
          "value": "products_high",
          "label": "t:sections.main-list-collections.settings.sort.options__5.label"
        },
        {
          "value": "products_low",
          "label": "t:sections.main-list-collections.settings.sort.options__6.label"
        }
      ],
      "default": "date_reversed",
      "label": "t:sections.main-list-collections.settings.sort.label"
    },
    {
      "type": "select",
      "id": "indent_value",
      "default": "1.6rem",
      "label": "t:sections.all.indents.label",
      "options": [
        {
          "value": "0",
          "label": "t:sections.all.indents.options__1.label"
        },
        {
          "value": "0.2rem",
          "label": "t:sections.all.indents.options__2.label"
        },
        {
          "value": "1.6rem",
          "label": "t:sections.all.indents.options__3.label"
        },
        {
          "value": "2.4rem",
          "label": "t:sections.all.indents.options__4.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile_options.header.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "1",
      "label": "t:sections.all.mobile_options.columns.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.all.mobile_options.columns.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.all.mobile_options.columns.options__2.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.all.mobile_options.swipe.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.image.header.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "default": "1/1",
      "label": "t:sections.all.image.aspect_ratio.label",
      "options": [
        {
          "value": "1/1",
          "label": "t:sections.all.image.aspect_ratio.options__1.label"
        },
        {
          "value": "3/2",
          "label": "t:sections.all.image.aspect_ratio.options__2.label"
        },
        {
          "value": "3/4",
          "label": "t:sections.all.image.aspect_ratio.options__3.label"
        },
        {
          "value": "4/3",
          "label": "t:sections.all.image.aspect_ratio.options__4.label"
        },
        {
          "value": "16/9",
          "label": "t:sections.all.image.aspect_ratio.options__5.label"
        },
        {
          "value": "21/9",
          "label": "t:sections.all.image.aspect_ratio.options__6.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "object_fit",
      "options": [
        {
          "value": "contain",
          "label": "t:sections.all.image.fit.options__1.label"
        },
        {
          "value": "cover",
          "label": "t:sections.all.image.fit.options__2.label"
        }
      ],
      "default": "cover",
      "label": "t:sections.all.image.fit.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.overlay.header.content"
    },
    {
      "type": "checkbox",
      "id": "overlay_enable",
      "default": true,
      "label": "t:sections.all.overlay.overlay_enable.label"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.2,
      "label": "t:sections.all.overlay.overlay_opacity.label",
      "info": "t:sections.all.overlay.overlay_opacity.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.section-margin.header.content"
    },
    {
      "type": "select",
      "id": "margin_top",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "no-indent",
      "label": "t:sections.all.section-margin.margin_top.label"
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        },
        {
          "value": "xl",
          "label": "t:sections.all.section-margin.options__6.label"
        }
      ],
      "default": "xl",
      "label": "t:sections.all.section-margin.margin_bottom.label"
    }
  ]
}
{% endschema %}

