{{ 'section-collapsible-content.css' | asset_url | stylesheet_tag }}

<script src="{{ 'collapsible-content.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  {% render 'section-margin' %}
  {% render 'section-padding' %}
{%- endstyle -%}

<div class="collapsible-content section-{{ section.id }}-padding{% if section.settings.show_border_top %} collapsible-content--border-top{% endif %}{% if section.settings.show_border_bottom %} collapsible-content--border-bottom{% endif %}">
  <div class="container">
    <div class="collapsible-content__wrapper">
      {% render 'section-header',
        section_heading: section.settings.section_heading,
        button_label: section.settings.section_button_label,
        button_link: section.settings.section_button_link,
        button_style: section.settings.section_button_style,
        large_margin: true
      %}

      <div class="collapsible-content__content">
        <div class="collapsible-content__items">
          {%- for block in section.blocks -%}
            <div
              class="collapsible-content__item{% if block.settings.default_open %} active{% endif %}"
              {{ block.shopify_attributes }}
            >
              <button
                class="collapsible-content__toggle focus-inset button--unstyled"
                aria-label="{{ block.settings.question | escape }}"
              >
                <div class="collapsible-content__toggle-group">
                  {%- if block.settings.question != blank -%}
                    <h4 class="collapsible-content__question h4">
                      {{ block.settings.question | escape }}
                    </h4>
                  {%- endif -%}
                </div>
                <div class="collapsible-content__icon">
                  {% render 'icon-arrow' %}
                </div>
              </button>

              {%- if block.settings.answer != blank or block.settings.answer_richtext != blank -%}
                <div
                  class="collapsible-content__answer"
                  {% if block.settings.default_open %}
                    style="display: block;"
                  {% endif %}
                >
                  <div class="collapsible-content__answer-inner richtext__content">
                    {%- if block.settings.answer != blank -%}
                      <p>{{- block.settings.answer -}}</p>
                    {%- endif -%}

                    {%- if block.settings.answer_richtext != blank -%}
                      {{- block.settings.answer_richtext -}}
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

