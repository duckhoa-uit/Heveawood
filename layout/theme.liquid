        /* New Typography System - Display Sizes (Adjusted for 10px rem base) */
        --font-display-2xl-size: 7.2rem; /* 72px: 4.5rem * 1.6 */
        --font-display-2xl-line-height: 1.25em;
        --font-display-2xl-letter-spacing: -0.02em;

        --font-display-xl-size: 6rem; /* 60px: 3.75rem * 1.6 */
        --font-display-xl-line-height: 1.2em;
        --font-display-xl-letter-spacing: -0.02em;

        --font-display-lg-size: 4.8rem; /* 48px: 3rem * 1.6 */
        --font-display-lg-line-height: 1.25em;
        --font-display-lg-letter-spacing: -0.02em;

        --font-display-md-size: 3.6rem; /* 36px: 2.25rem * 1.6 */
        --font-display-md-line-height: 1.222em;
        --font-display-md-letter-spacing: -0.02em;

        --font-display-sm-size: 3rem; /* 30px: 1.875rem * 1.6 */
        --font-display-sm-line-height: 1.267em;

        --font-display-xs-size: 2.4rem; /* 24px: 1.5rem * 1.6 */
        --font-display-xs-line-height: 1.333em;

        /* New Typography System - Text Sizes (Adjusted for 10px rem base) */
        --font-text-lg-size: 2rem; /* 20px: 1.25rem * 1.6 */
        --font-text-lg-line-height: 1.5em;

        --font-text-md-size: 1.6rem; /* 16px: 1rem * 1.6 */
        --font-text-md-line-height: 1.5em;

        --font-text-sm-size: 1.2rem; /* 12px: 0.75rem * 1.6 */
        --font-text-sm-line-height: 1.5em;

        /* New Typography System - Font Weights */
        --font-weight-regular: 400;
        --font-weight-medium: 600; /* Updated to use Demibold (600) instead of Medium (500) */
        --font-weight-bold: 700;

        --border-radius-main: {{ settings.main_border_radius }}px;
        --border-radius-button: {{ settings.button_border_radius }}px;
        --border-radius-badge: {{ settings.badge_border_radius }}px;
        --payment-terms-background-color: {{ settings.colors_background_1 }};
      }

      /* Mobile typography adjustments (Adjusted for 10px rem base) */
      @media screen and (max-width: 749px) {
        :root {
